<Window x:Class="PMBusInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMBusInterface"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="BITBLAZE PMBus Analyser" Height="500" Width="800">

    <Grid ShowGridLines="False">

        <Grid.RowDefinitions>
            <RowDefinition Height="16*"></RowDefinition>
            <RowDefinition Height="56*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="32*"></RowDefinition>
            <RowDefinition Height="77*"></RowDefinition>
            <RowDefinition Height="205*"/>
            <RowDefinition Height="16*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20">
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition Width="20">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Control buttons -->
        
        <Button Content="CHECK FRU" Grid.Column="2" Grid.Row="2" Margin="10,0,10,0"
            Click="CheckFRU" FontFamily="Segoe UI Black"/>
        <Button Content="CHECK PSU" Grid.Column="3" Grid.Row="2" Margin="10,0,10,0"
            Click="CheckPSU" FontFamily="Segoe UI Black"/>
        <Button Content="EXPORT TO EXCEL" Grid.Column="4" Grid.Row="2" Margin="10,0,10,0"
            Click="ExportToExcel" FontFamily="Segoe UI Black"/>

        <!-- Address and Path -->
        
        <!-- Control buttons and COM port selection -->
        <Button Content="SCAN" Grid.Column="1" Grid.Row="2" Margin="10,0,10,0"
        Click="ScanPort" FontFamily="Segoe UI Black"/>
        <ComboBox Grid.Column="1" Grid.Row="3" 
          VerticalAlignment="Top" 
          Margin="10,0,10,0"
          x:Name="available_ports"
          ToolTip="{Binding SelectedItem.Description, ElementName=available_ports}"
                  DropDownOpened="ComboBox_DropDownOpened">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="60"/>
                        <TextBlock Text="{Binding Description}" Margin="10,0,0,0" Opacity="0.7"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBox Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="0x**" Margin="10,0,0,0"
            x:Name="fru_input"  PreviewTextInput="HexInput_PreviewTextInput"/>
        <TextBox Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" Text="0x**" Margin="10,0,0,0"
             x:Name="psu_input"  PreviewTextInput="HexInput_PreviewTextInput"/>
        <TextBox Grid.Column="4" Grid.Row="4" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Margin="10,30,10,0"  
             x:Name="output_path"/>
        <Button Content="Set path" Grid.Column="4" Grid.Row="4" Margin = "15,60,15,0" 
            Click="ChooseOutputFolder" Grid.RowSpan="2" VerticalAlignment="Top" FontSize="16" FontFamily="Segoe UI Black"/>


        <!-- Results -->
        <TextBlock Grid.Column="1" Grid.Row="4" 
           x:Name="addresses" 
           Margin="10,0,10,0"
           FontFamily="Consolas"
           TextWrapping="Wrap"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" Click="ClearOutput_Click"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="4" FontSize="10" TextWrapping="Wrap" Text="FRU output" Margin="10,10,10,0"
            x:Name="FRUoutput" Grid.RowSpan="2" FontFamily="Consolas"/>
        <TextBlock Grid.Column="3" Grid.Row="4" FontSize="10" TextWrapping="Wrap" Text="PSU output" Margin="10,10,10,0"
            x:Name="PSUoutput" Grid.RowSpan="2" FontFamily="Consolas"/>

        <!-- Hints -->
        <TextBlock Grid.Column="4" Grid.Row="4" HorizontalAlignment="Left" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Text="Enter output document path" VerticalAlignment="Top" Margin="10,0,0,0"/>
        <TextBlock Grid.Column="1" FontSize="36" FontWeight="Bold" TextWrapping="Wrap" Text="BITBLAZE" Margin="10,16,10,80" Grid.ColumnSpan="2" Foreground="#FF4CAF50" Grid.RowSpan="3" FontFamily="Segoe UI Black"/>

    </Grid>
</Window>
