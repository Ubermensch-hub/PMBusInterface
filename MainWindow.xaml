<Window x:Class="PMBusInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMBusInterface"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="BITBLAZE PMBus Analyser" Height="500" Width="800">

    <Grid ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="350*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20">
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition Width="20">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- Control buttons -->
        <Button Content="SCAN" Grid.Column="1" Grid.Row="2" Margin="10,0,10,0"
            Click="ScanPort"/>
        <Button Content="CHECK FRU" Grid.Column="2" Grid.Row="2" Margin="10,0,10,0"
            Click="CheckFRU"/>
        <Button Content="CHECK PSU" Grid.Column="3" Grid.Row="2" Margin="10,0,10,0"
            Click="CheckPSU"/>
        <Button Content="EXPORT TO EXCEL" Grid.Column="4" Grid.Row="2" Margin="10,0,10,0"
            Click="ExportToExcel"/>
        
        <!-- Address and Path -->
        <ComboBox Grid.Column="1" Grid.Row="3" Text="COM-Port" VerticalAlignment="Top" Margin="10,0,10,0"
            x:Name="available_ports"/>

        <TextBox Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="FRU address" VerticalAlignment="Top" Margin="10,0,10,0"
            x:Name="fru_input"/>
        <TextBox Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" Text="PSU address" VerticalAlignment="Top" Margin="10,0,10,0"
             x:Name="psu_input"/>
        <TextBox Grid.Column="4" Grid.Row="4" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" Margin="10, 30, 10, 0"  
             x:Name="output_path"/>
        <Button Content="Set path" Grid.Column="4" Grid.Row="4" VerticalAlignment="Top" Margin = "15,70,15,0" 
            Click="ChooseOutputFolder"/>

        
        <!-- Results -->
        <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" FontSize="11" FontWeight="Bold" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,10,0"
            x:Name="addresses" Text="{Binding ElementName=addresses,Path=Text}"/>
        <TextBlock Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" FontSize="11" FontWeight="Bold" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="10,0,10,0"
            x:Name="FRUoutput"/>
        <TextBlock Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left" FontSize="11" FontWeight="Bold" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="10,0,10,0"
            x:Name="PSUoutput"/>
        
        <!-- Hints -->
        <TextBlock Grid.Column="4" Grid.Row="4" HorizontalAlignment="Left" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" Text="Enter output document path" VerticalAlignment="Top" Margin="10,0,10,0"/>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" FontWeight="Bold" TextWrapping="Wrap" Text="BITBLAZE" Margin="10,0,10,0" Grid.ColumnSpan="2" Foreground="#FF4CAF50"/>
         
    </Grid>
</Window>
